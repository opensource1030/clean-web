<div class="row">
  <div class="column small-12">

    <div class="active-filters">
      <a href="#" {{action 'toggleSidebar' target="controllers.application"}}
        {{bind-attr class="controllers.application.isSidebarVisible:hidden:visible-inline :showControls"}}>
        <span class="fa fa-arrow-right"></span>
        Show Filters
      </a>
      <span class="filter">
        <strong>Bill Month</strong>: August 2014<span class="fa fa-close"></span>
      </span>
      <span class="filter">
        <strong>Carrier</strong>: Verizon<span class="fa fa-close"></span>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="column medium-12 small-12 large-12">
    <h1 class='page-title' >Line Charge Report</h1>


        <div class="cta-container">
          <div class="button-dropdown-container">
            <a href="#" class="button dropdown-button small middle grey round" data-dropdown="exportReport" aria-controls="exportReport" aria-expanded="true" ><span class="fa fa-file-o"></span> Export Report</a><br/>
            <div id="exportReport" data-dropdown-content class="f-dropdown right" role="menu" aria-hidden="false">
              <div class="options">
                <ul>
                  <li><span class="fa fa-check"></span> Desktop</li>
                  <li><span class="fa "></span> XLS</li>
                  <li><span class="fa"></span> CSV</li>
                </ul>
              </div>
            </div>
          </div>
          <div class="button-dropdown-container">
            <a href="#" class="button dropdown-button small middle grey round" data-dropdown="resultsDrop" aria-controls="resultsDrop" aria-expanded="true" >25 Results Per Page</a><br/>
            <div id="resultsDrop" data-dropdown-content class="f-dropdown right" role="menu" aria-hidden="false">
              <div class="options">
                <ul>
                  <li><span class="fa fa-check"></span> 25 Results Per Page</li>
                  <li><span class="fa "></span> 30 Results Per Page</li>
                  <li><span class="fa"></span> 50 Results Per Page</li>
                  <li><span class="fa"></span> 100 Results Per Page</li>
                </ul>
              </div>
            </div>
          </div>

          <ul class="pagination">
            <li class="current"><a href="">1</a></li>
            <li><a href="">2</a></li>
            <li><a href="">4</a></li>
            <li class="unavailable"><a href="">&hellip;</a></li>
            <li><a href="">12</a></li>
            <li class="arrow"><a href=""><!--Next--> <span class="fa fa-arrow-right"></span></a></li>
          </ul>
        </div>

  </div>
</div>

<div class="row report-table-container">
  <div class="column small-12">
    <br>
{{!-- {{table-component
  hasFooter=false
  columnsBinding="columns"
  contentBinding="content"
  numFixedColumns=2
  }} --}}
  <br>

    <table class="table table-striped table-bordered report-table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Mobile #</th>
          <th>Carrier</th>
          <th>Device</th>
          <th>
          </th>
          <th colspan="2">
            Total
            <div class="cost striped-bg">
              {{money totalCharges.total}}
            </div>
          </th>
          <th>
            Voice
            <div class="cost striped-bg">
              {{money totalCharges.voice}}
            </div>
          </th>
          <th>
            Data
            <div class="cost striped-bg">
              {{money totalCharges.data}}
            </div>
          </th>
          <th>
            Messaging
            <div class="cost striped-bg">
              {{money totalCharges.messaging}}
            </div>
          </th>
          <th>
            Taxes
            <div class="cost striped-bg">
              {{money totalCharges.taxes}}
            </div>
          </th>
          <th>
            Equipment
            <div class="cost striped-bg">
              {{money totalCharges.equipment}}
            </div>
          </th>
          <th>
            Other
            <div class="cost striped-bg">
              {{money totalCharges.other}}
            </div>
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each}}
        <tr>
          <td>{{employee.firstName}} {{employee.lastName}}</td>
          <td>{{#link-to 'report' this}}{{phone}}{{/link-to}}</td>
          <td>{{carrier.name}}</td>
          <td>{{devices.firstObject.model}}</td>
          <td>
            <a href="#" class="button tiny grey round fa fa-line-chart"></a>
          </td>
          <td>
            <a href="#" class="total positive">5%</a>
          </td>
          <td>{{money total}}</td>
          <td>{{money asset.billing.voice.charges.total}}</td>
          <td>{{money asset.billing.data.charges.total}}</td>
          <td>{{money asset.billing.messaging.charges.total}}</td>
          <td>{{money asset.billing.taxes.charges.total}}</td>
          <td>{{money asset.billing.equipments.charges.total}}</td>
          <td>{{money asset.billing.others.charges.total}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>



  <div class="column small-12 medium-6">
    <p class="copyright">&copy;2014 by Wireless Analytics LLC All Rights Reserved</p>
  </div>
  <div class="column small-12 medium-6 text-right">
          <ul class="pagination">
            <li class="current"><a href="">1</a></li>
            <li><a href="">2</a></li>
            <li><a href="">4</a></li>
            <li class="unavailable"><a href="">&hellip;</a></li>
            <li><a href="">12</a></li>
            <li class="arrow"><a href=""><!--Next--> <span class="fa fa-arrow-right"></span></a></li>
          </ul>
  </div>
</div>

<div class="report-detail-container">
  {{outlet}}
</div>
